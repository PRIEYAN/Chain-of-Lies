{
  "name": "@tamper-hunt/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch src/main.ts",
    "build": "tsup src/main.ts --format cjs --dts",
    "start": "cross-env NODE_ENV=production node dist/main.cjs",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate"
  },
  "dependencies": {
    "@tamper-hunt/shared": "workspace:*",
    "@tamper-hunt/types": "workspace:*",
    "connect-pg-simple": "^10.0.0",
    "drizzle-orm": "^0.39.3",
    "drizzle-zod": "^0.7.0",
    "express": "^5.0.1",
    "express-session": "^1.18.1",
    "memorystore": "^1.6.7",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.16.3",
    "socket.io": "^4.8.3",
    "ws": "^8.18.0",
    "zod": "^3.24.2",
    "zod-validation-error": "^3.4.0",
    "mongoose": "^8.0.0",
    "ethers": "^6.0.0",
    "jsonwebtoken": "^9.0.0"
  },
  "devDependencies": {
    "@types/connect-pg-simple": "^7.0.3",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/node": "^20.12.12",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.11.6",
    "@types/ws": "^8.5.10",
    "@types/jsonwebtoken": "^9.0.0",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.30.4",
    "tsup": "^8.0.2",
    "tsx": "^4.19.3",
    "typescript": "^5.4.5"
  }
}
